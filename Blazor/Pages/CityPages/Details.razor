@page "/cities/{id}"
@inject HttpClient HttpClient
@using System.Net.Http.Json;
@using Blazor.Data;
@inject NavigationManager Navigation

<PageTitle>Update City</PageTitle>

@if (isLoading)
{
    <p>Loading...</p>
}
else
{
    <a class="btn btn-primary" href="/cities" role="button">Return</a>

    <h1>@city.name</h1>
    <br/>
    @* @if (city.availableRoutes.Count > 0){
        <h2>Available routes:</h2>
        @foreach (var end in city.availableRoutes)
        {
            <p>Route Id: @end.lineId &emsp; End city name: @end.endCityName</p>
        }
    }
    else {
        <p>No available routes!</p>
    } *@

    @if (city.guide != null){
        <h2>Guide</h2>
        <p>@city.guide</p>
    }
    else {
        <p>No guide available</p>
    }
    
    
}

@code {
    [Parameter]
    public string id { get; set; }
    private City city = new City();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        city = await HttpClient.GetFromJsonAsync<City?>($"http://api:8082/City/{id}");
        isLoading = false;
    }
}
